# frontend/* configuration file
# EditorConfig helps maintain consistent coding styles
# More info: https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{ts,tsx,js,jsx,json}]
quote_type = double
max_line_length = 100

[*.css]
indent_size = 2
max_line_length = 80