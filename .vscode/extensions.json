// frontend/.vscode/settings.json
{
  "recommendations": [
    "dbaeumer.vscode-eslint",         // ESLint - linting + code quality
    "esbenp.prettier-vscode",         // Prettier - code formatting
    "csstools.postcss",               // PostCSS IntelliSense
    "bradlc.vscode-tailwindcss",      // Tailwind CSS IntelliSense (if you're using Tailwind)
    "streetsidesoftware.code-spell-checker", // Catch typos
    "yoavbls.pretty-ts-errors",       // Better TypeScript error messages
    "formulahendry.auto-rename-tag",  // Auto-rename paired JSX/HTML tags
    "formulahendry.auto-close-tag",   // Auto-close JSX/HTML tags
    "ms-vscode.vscode-typescript-next", // Latest TypeScript features
    "eamodio.gitlens"                 // GitLens - Git history & blame
  ],
  "unwantedRecommendations": [
    "hookyqr.beautify" // Conflicts with Prettier
  ]
}
